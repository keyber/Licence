#include <stdio.h>
#include <stdlib.h>
#include "pgm.h"

void histogramme (int his [256], unsigned char *buf, long size){
	int i;

	for (i = 0; i < 256; ++i) {
		his[i] = 0;;
	}

	for (i = 0; i < size; ++i) {
		his[buf[i]]++;
	}

	printf("%ld\n", size);
	for (i = 0; i < size; ++i) {
		printf("%d %u\n", i, his[i]);
	}
}

int main(int argc, char **argv) {
	if(argc!=2){
		printf("1 arg requis");
		return 1;
	}
	printf("arg %s\n", argv[1]);

	int w, h;
	unsigned char* buf = readpgm(argv[1], &w, &h);
	printf("%d %d\n", w, h);

	int histo [256];

	histogramme(histo, buf, w*h);

	free(buf);
	return 0;
}
